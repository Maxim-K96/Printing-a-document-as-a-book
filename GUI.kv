#kivy 2.0.0

<ButtonShare>:
	text: 'Сформировать'
	font_size: 20
	background_color: [.32, .85, .94, 1]
	background_normal: ''
	size_hint: (.1, 1)

<SecondCase>:
	orientation:'vertical'
	size_hint: [1, 1]
	padding: 10
	pos_hint: {'right': 90}

<TextOutput>:
	size_hint: (1, .9)
	auto_indent:True
	border:[20,20,20,20]
	background_color:[32/255, 33/255, 36/255, 1]
	foreground_color:[223/255, 230/255, 233/255,1]
	padding:[25,0,0,0] #left, top, right, bottom
	selection_color:[116/255, 185/255, 255/255,.5]

<IntInput>:
	size_hint: (.03, .05)
	font_size: 20
	auto_indent:True
	padding:[22,10,0,0]
#	background_color:[0, 0, 0, 1]
#	focus:True

<ButtonAndPagesInput>:
	cols:2
	spacing:4
	size_hint:(.5, 1)
	padding:4

<BottomHalfOfTheSecondContainer>:
	anchor_x:'right'
	anchor_y:'bottom'
	size_hint:(1, .1)
